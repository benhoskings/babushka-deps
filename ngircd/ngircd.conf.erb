[Global]
  Name = <%= host %>
  Info = <%= description %>
  AdminEMail = <%= admin_email %>

  Ports = 6667

  MotdFile = /etc/ngircd/ngircd.motd
  PidFile = /var/run/ngircd/ngircd.pid

  PingTimeout = 120
  PongTimeout = 20
  ConnectRetry = 60
  OperCanUseMode = yes
  MaxConnections = 500
  MaxConnectionsIP = 10
  MaxJoins = 10

<%
  channels.to_s.split(/,\s*/).map {|chan|
    chan.start_with '#'
  }.each do |channel_name|
%>
[Channel]
  Name = <%= channel_name %>
  ;Modes = tn
<% end %>
